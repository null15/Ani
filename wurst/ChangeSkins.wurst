package ChangeSkins

import ClosureTimers

import SkinCreation

public framehandle settingsOpen

trigger settingsAction

init

    doAfter(5) -> 
        if BlzLoadTOCFile("war3mapImported\\ChangeSkin.toc")
            settingsOpen(0)
        else
            print("Could not load ChangeSkin.toc")


