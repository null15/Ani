public function settingsOpen(integer index)

    settingsOpen = BlzCreateFrame("SuperParentSkin", BlzGetOriginFrame(ORIGIN_FRAME_GAME_UI, 0), 0, index)
    BlzFrameSetAbsPoint(settingsOpen, FRAMEPOINT_LEFT, 0.1517, 0.107)

    BlzFrameSetVisible(settingsOpen, true)

    settingsAction = CreateTrigger()
    TriggerAddAction(settingsAction, function settingsAction)
    BlzTriggerRegisterFrameEvent(settingsAction, BlzGetFrameByName("ChangeSkin", index), FRAMEEVENT_CONTROL_CLICK)